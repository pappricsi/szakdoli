@model Szakdoli.Models.Raktar

@{
    ViewData["Title"] = "Törlés";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Raktár törlése</h1>

<h3>Biztos törölni akarja ?</h3>
<div>
    <h4>Raktar</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nev)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nev)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cim)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cim)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TelefonSZam)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelefonSZam)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RaktarId" />
        <input type="submit" value="Törlés" class="btn btn-danger" /> |
        <a asp-action="Index">Vissza a lista nézethez</a>
    </form>
</div>
