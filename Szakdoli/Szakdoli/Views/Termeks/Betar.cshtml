@model Szakdoli.Models.Termek

@{
    ViewData["Title"] = "Betar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Termék Betárolás</h1>


<hr />
@if (ViewBag.TermekTipusok.Items.Count == 0 || ViewBag.Lokaciok.Items.Count == 0 )
{
    if (ViewBag.TermekTipusok.Items.Count == 0)
    {
        <h2>Nincs létező terméktípus !</h2>
        <p>Előbb vegyen fel terméktípust és csak utánna tud terméket betárolni !</p>
    }
    else
    {
        <h2>Nincs üres tárhely !</h2>
        <p>Minden tárhely megtelt!</p>
    }
}
else
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Betar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LokacioId" class="control-label"></label>
                    <select asp-for="LokacioId" class="form-control" asp-items="ViewBag.Lokaciok"></select>
                </div>
                <div class="form-group">
                    <label asp-for="TermekTipusId" class="control-label"></label>
                    <select asp-for="TermekTipusId" class="form-control" asp-items="ViewBag.TermekTipusok"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Betárol" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Termék lista</a>
    </div>
}


