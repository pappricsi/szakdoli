@model Szakdoli.Models.Termek

@{
    ViewData["Title"] = "Áthelyezés";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Termék áthelyezése</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TermekID" />
            <div class="form-group">
                <label asp-for="LokacioId" class="control-label"></label>
                <select asp-for="LokacioId" class="form-control" asp-items="ViewBag.LokacioId"></select>
                <span asp-validation-for="LokacioId" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Termék lista</a>
</div>

