@model Szakdoli.Models.Termek


@{
    ViewData["Title"] = "Kitar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

  
<h1>Termék Kitárolás</h1>


<hr />

@if (ViewBag.TermekTipus.Items.Count == 0)
{
    <h2>Nincs áru a raktárban !</h2>
    <p>Előbb tároljon be terméket, csak utánna tud kitárolni !</p>
}
else
{

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Kitar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="TermekTipusId" class="control-label"></label>
                    <select asp-for="TermekTipusId" class="form-control" asp-items="ViewBag.TermekTipus"></select>
                    @Html.ValidationMessageFor(m => m.Tipus)
                </div>

                <div class="form-group">
                    <input type="submit" value="Kitárol" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Termék lista</a>
    </div>

}


