@model Szakdoli.Models.Lokacio

@{
    ViewData["Title"] = "Új tárhely";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Új Tárhey</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LokacioNev" class="control-label"></label>
                <input asp-for="LokacioNev" class="form-control" />
                <span asp-validation-for="LokacioNev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RaktarID" class="control-label"></label>
                <select asp-for="RaktarID" class ="form-control" asp-items="ViewBag.RaktarID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Felvesz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vissza a lista nézethez</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
