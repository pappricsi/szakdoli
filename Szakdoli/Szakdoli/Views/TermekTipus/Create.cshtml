@model Szakdoli.Models.TermekTipus

@{
    ViewData["Title"] = "Létrehoz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Új típus</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipusNev" class="control-label"></label>
                <input asp-for="TipusNev" class="form-control" />
                <span asp-validation-for="TipusNev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Suly" class="control-label"></label>
                <input asp-for="Suly" class="form-control" />
                <span asp-validation-for="Suly" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Hozzáad" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vissza a lista nézethez</a>
</div>

